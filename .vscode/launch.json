{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}"
			],
			"outFiles": [
				"${workspaceRoot}/out/src/**/*.js"
			],
			"preLaunchTask": "npm: watch",
			"smartStep": true,
			"skipFiles": [
				"<node_internals>/**"
			]
		}
	]
}
